          <form class="md-form mb-5" action="/search/title" method="POST">
            <!--Body-->
            <div class="modal-body mb-1">
               
                <p>Search for a book title and enter any extra details you might have:</p>
                <div class="md-form mb-5">
                    <i class="fa fa-search prefix grey-text"></i>
                    <input type="text" id="orangeForm-name" class="form-control validate" name="query">
                    <label data-error="wrong" data-success="right" for="orangeForm-name">Search for any book...</label>
                    
                    </div>
                    <div class="md-form mb-5">
                    <i class="fa fa-user prefix grey-text"></i>
                    <input type="text" id="author" class="form-control validate" name="author">
                    <label data-error="wrong" data-success="right" for="author">Add an author if you want</label>
                    
                    </div>

                    <p>Search Within Genre?</p>
                    <div class="md-form mb-5">
                    <br>
                    <div class="switch">
                    <label>
                      Off
                      <input type="checkbox" id="trigger" name="genre_choice">
                      <span class="lever"></span> On
                    </label>
                    </div>

                    <div id="hidden_fields"> 
                    <div class="md-form mb-5">
                    
                    
                    
                    <select class="mdb-select md-form" searchable="Search here.." name="genre">
                      <option value="" disabled selected>Choose a Genre</option>
                      <option value="Art">Art</option>
                      <option value="Biography">Biography</option>
                      <option value="Business">Business</option>
                      <option value="Childrens">Childrens</option>
                      <option value="Religion">Religion</option>
                      <option value="Classics">Classics</option>
                      <option value="Comics">Comics</option>
                      <option value="Crime">Crime</option>
                      <option value="Fantasy">Fantasy</option>
                      <option value="Historical Fiction">Historical Fiction</option>
                      <option value="History">History</option>
                      <option value="Horror">Horror</option>
                      <option value="Mystery">Mystery</option>
                      <option value="Philosophy">Philosophy</option>
                      <option value="Poetry">Poetry</option>
                      <option value="Science">Science</option>
                      <option value="Romance">Romance</option>
                      <option value="Science Fiction">Science Fiction</option>
                    </select>
                    </div>
                    </div>
              

              
            </div>
              <div class="text-center mt-2">
                <button class="btn btn-info">Search <i class="fa fa-search ml-1"></i></button>
              </div>
            </div>
            </form>
            <!--Footer-->
