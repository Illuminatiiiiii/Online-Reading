<% include partials/header %>

<!--Section: Inputs-->
<section class="section card mb-5">

<div class="card-body">

  <!--Section heading-->
  <h1 class="text-center my-5 h1">Book found from ISBN</h1>

  <h5 class="pb-5">Basic Info</h5>

  <form action="/books/add/complete" method="POST" id="bookForm" enctype="multipart/form-data">
    <!--Grid row-->
  <div class="row">

  <!--Grid column-->
  <div class="col-md-6 mb-4">

    <div class="md-form">
      <input value="<%= isbn %>" type="text" class="form-control" name="isbn">
      <label for="form3" class="active">ISBN</label>
    </div>

  </div>
  <!--Grid column-->

  <!--Grid column-->
  <div class="col-md-6 mb-4">

    <div class="md-form">
      <input value="<%= book.title %>" type="text" class="form-control" name="title">
      <label for="form3" class="active">Title</label>
    </div>

  </div>
  <!--Grid column-->

  <!--Grid column-->
  <div class="col-md-4 mb-4">

    <div class="md-form">
      <input value="<%= book.authors %>" type="text" class="form-control" name="author">
      <label for="form3" class="active">Author(s)</label>
    </div>

  </div>
  <!--Grid column-->
  <div class="col-md-6 mb-4">

  <div class="md-form">
    <input value="<%= book.description %>" type="text" class="form-control" name="description">
    <label class="active" for="form4">Description</label>
  </div>

</div>
<!--Grid column-->
</div>
<!--Grid row-->


<!--Grid row-->


<h5 class="pb-5">Extra Info</h5>

<!--Grid row-->
<div class="row">

  <!--Grid column-->
  <div class="col-md-6 mb-4">
    <h4>Rating(<% if(book.averageRating == null){ %>
      No Rating
    <% }else{ %>
      <span name="rating"><%= book.averageRating %></span>
    <% } %> ):</h4>
    <% if(book.averageRating >= 0.1 && book.averageRating <= 1.9){ %>
          <ul class="rating">
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
      </ul>
      <% }else if(book.averageRating == 0){ %>
          <ul class="rating">
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
      </ul>
       <% }else if(book.averageRating <= 2.9 && book.averageRating >= 2){ %>
          <ul class="rating">
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
      </ul>
      <%  }else if(book.averageRating <= 3.9 && book.averageRating >= 3){ %>
          <ul class="rating">
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
      </ul>
     <%   }else if(book.averageRating <= 4.9 && book.averageRating >= 4){ %>
          <ul class="rating">
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star-o"></i>
          </li>
      </ul>
       <% }else if(book.averageRating == 5){ %>
          <ul class="rating">
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
          <li>
            <i class="fa fa-star"></i>
          </li>
      </ul>
       <% }else if(book.averageRating == null){ %>
       <ul class="rating">
       <li>
         <i class="fa fa-star-o"></i>
       </li>
       <li>
         <i class="fa fa-star-o"></i>
       </li>
       <li>
         <i class="fa fa-star-o"></i>
       </li>
       <li>
         <i class="fa fa-star-o"></i>
       </li>
       <li>
         <i class="fa fa-star-o"></i>
       </li>
   </ul> 
   <% } %>
  </div>
  <!--Grid column-->

  <div class="col-md-6 mb-4">
    <h4>Pages:</h4>
    <h3 name="pageCount" value="<%= book.pageCount %>" form="bookForm"><%= book.pageCount %></h3>
  </div>
  <!--Grid column-->
  <div class="col-md-6 mb-4">
    <h4>Date Published:</h4>
    <h3 name="date"><%= book.publishedDate %></h3>
  </div>

  <div class="col-md-6 mb-4">
    <h4>Publisher:</h4>
    <h3><%= book.publisher %></h3>
  </div>
  <!--Grid column-->
  

</div>
<!--Grid row-->

<h5 class="pb-5">Upload Files</h5>

<!--Grid row-->
<div class="row">

  <!--Grid column-->
  <div class="col-md-6 mb-4">

      <div class="md-form">
        <div class="file-field">
          <div class="btn btn-primary btn-sm float-left">
            <span>Epub File</span>
            <input type="file" name="bookFile">
          </div>
          <div class="file-path-wrapper">
            <input name="fileName" class="file-path validate" type="text" placeholder="Upload your file">
          </div>
        </div>
      </div>

  </div>
  <!--Grid column-->

  <!--Grid column-->
  <div class="col-md-6 mb-4">

      <div class="md-form">
        <div class="file-field">
          <div class="btn btn-primary btn-sm float-left">
            <span>Book Cover Image File</span>
            <input type="file" name="coverFile">
          </div>
          <div class="file-path-wrapper">
            <input name="imageName" class="file-path validate" type="text" placeholder="Upload one or more files" name="coverFile">
          </div>
        </div>
      </div>

  </div>
  <!--Grid column-->

</div>
<!--Grid row-->
<h5 class="pb-5">Categorization</h5>
<div class="row">
  <div class="col-lg-4 col-md-6 mb-4">

  <fieldset class="form-check mb-4">
    <input class="form-check-input" name="fiction" type="radio" checked="checked" value="Fiction" id="yeet">
    <label class="form-check-label" for="yeet">Fiction</label>

    <input class="form-check-input" name="fiction" type="radio" id="radio22" value="Non Fiction">
    <label class="form-check-label" for="radio22">Non Fiction</label>
  </fieldset>


    </div>
  <!--Grid column-->

  <div class="col-lg-4 col-md-6 mb-4">

  <fieldset class="form-check mb-4">
    <input class="form-check-input" name="genre" type="radio" id="radio1" checked="checked" value="Art">
    <label class="form-check-label" for="radio1">Art</label>

    <input class="form-check-input" name="genre" type="radio" id="radio2" value="Biography">
    <label class="form-check-label" for="radio2">Biography</label>

