    <label class="form-check-label" for="radio5">Classics</label>

    <input class="form-check-input" name="genre" type="radio" id="radio6" value="Comics">
    <label class="form-check-label" for="radio6">Comics</label>

    <input class="form-check-input" name="genre" type="radio" id="radio7" value="Crime">
    <label class="form-check-label" for="radio7">Crime</label>

    <input class="form-check-input" name="genre" type="radio" id="radio8" value="Fantasy">
    <label class="form-check-label" for="radio8">Fantasy</label>

    <input class="form-check-input" name="genre" type="radio" id="radio9" value="Historical Fiction">
    <label class="form-check-label" for="radio9">Historical Fiction</label>

    <input class="form-check-input" name="genre" type="radio" id="radio10" value="History">
    <label class="form-check-label" for="radio10">History</label>

    <input class="form-check-input" name="genre" type="radio" id="radio11" value="Horror">
    <label class="form-check-label" for="radio11">Horror</label>

    <input class="form-check-input" name="genre" type="radio" id="radio12" value="Mystery">
    <label class="form-check-label" for="radio12">Mystery</label>

    <input class="form-check-input" name="genre" type="radio" id="radio13" value="Philosophy">
    <label class="form-check-label" for="radio13">Philosophy</label>

    <input class="form-check-input" name="genre" type="radio" id="radio14" value="Poetry">
    <label class="form-check-label" for="radio14">Poetry</label>

    <input class="form-check-input" name="genre" type="radio" id="radio15" value="Science">
    <label class="form-check-label" for="radio15">Science</label>

    <input class="form-check-input" name="genre" type="radio" id="radio16" value="Romance">
    <label class="form-check-label" for="radio16">Romance</label>

    <input class="form-check-input" name="genre" type="radio" id="radio17" value="Science Fiction">
    <label class="form-check-label" for="radio17">Science Fiction</label>
  </fieldset>


</div>

</div>
<div class="row">
  <button type="submit" class="btn btn-outline-primary btn-rounded waves-effect" form="bookForm">Complete</button>
</div>
  </form>

</div>

</section>
